<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayVideoActivity"
    tools:showIn="@layout/now_playvideo">

    <com.example.dangerous.dangerousor.view.MyVideoView
        android:id="@+id/videoView"
        android:layout_width="332dp"
        android:layout_height="383dp"
        android:layout_gravity="center">

    </com.example.dangerous.dangerousor.view.MyVideoView>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/record_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title Your Video(No More Than 10 Words)"
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/topic_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/topicarr"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/record_upload"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm Upload" />

        <Button
            android:id="@+id/record_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>
